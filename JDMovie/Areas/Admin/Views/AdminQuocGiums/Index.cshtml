@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid">
			<div class="row">
				<!-- main title -->
				<div class="col-12">
					<div class="main__title">
						<h2>Quốc Gia</h2>
						<a asp-action="Create" class="main__title-link">Thêm Quốc Gia</a>
						<span class="main__title-stat">
							<!--total-->
						</span>

						<div class="main__title-wrap">
						

							
						</div>
					</div>
				</div>
				<!-- end main title -->

				<!-- users -->
				<div class="col-12">
					<div class="main__table-wrap">
						<table class="main__table">
							<thead>
								<tr>
									
									<th><div class="main__table-text">Tên Quốc Gia</div></th>
									
									
								</tr>
							</thead>

							<tbody>
								@if(Model != null)
								{
								@foreach (var item in Model) 
								{
									<tr>
										
										<td>
											<div class="main__table-text">@Html.DisplayFor(modelItem => item.TenQg)</div>										
										</td>								
										<td>
											<div class="main__table-btns">											
												<a asp-action="Edit" asp-route-id="@item.MaQg" class="main__table-btn main__table-btn--edit">
													<i class="icon ion-ios-create"></i>
												</a>
												<a asp-action="Delete" asp-route-id="@item.MaQg" class="main__table-btn main__table-btn--delete ">
													<i class="icon ion-ios-trash"></i>
												</a>
											</div>
										</td>
									</tr>								
								}
								}																						
							</tbody>
						</table>
					</div>
				</div>
				<!-- end users -->


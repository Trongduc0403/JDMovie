@model JDMovie.Models.TheLoaiPhimLe

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
	<div class="row">
		<div class="col-12">
			<div class="main__title">
				<h2>Xoá Thể Loại Phim Lẻ</h2>
			</div>
		</div>			
		<div class="tab-content" id="myTabContent">
			<div class="tab-pane fade show active" id="tab-1" role="tabpanel" aria-labelledby="1-tab">
				<div class="col-12">
					<div class="row">
						<div class="col-12 col-lg-6">
							<form asp-action="Delete" class="profile__form">										
								<div class="row">
									<div class="col-12">
										<h4 class="profile__title">Thông Tin Thể Loại Phim Lẻ</h4>
									</div>
									<div asp-validation-summary="ModelOnly" class="text-danger"></div>
									
									<div class="col-12 col-md-6 col-lg-12 col-xl-6">
										<div class="profile__group">
											<label class="profile__label" for="username">Tên Phim</label>
											<input asp-for="IdphimLe" class="profile__input" asp-items="ViewBag.IdphimLe">
											
											
										</div>
									</div>
									<div class="col-12 col-md-6 col-lg-12 col-xl-6">
										<div class="profile__group">
											<label class="profile__label" for="firstname">Tên Thể Loại</label>
											<input asp-for="IdtheLoai" class="profile__input" asp-items="ViewBag.IdtheLoai">
											
											
										</div>
									</div>
									<div class="col-12">											
										<button class="profile__btn" type="submit" value="Delete">Xoá</button>	
										<button class="profile__btn" asp-controller="TheLoaiPhimLes" asp-action="Index">Trở Về</button>							
									</div>					
								</div>
							</form>
						</div>
					</div>
				</div>	
			</div>				
		</div>			
	</div>
</div>
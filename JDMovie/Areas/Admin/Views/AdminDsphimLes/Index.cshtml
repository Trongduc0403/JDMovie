

@model IEnumerable<JDMovie.Models.DsphimLe>
@{
    
    
	ViewData["Title"] = "Index" ;
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
	
}

<div class="container-fluid">
			<div class="row">
				<!-- main title -->
				<div class="col-12">
					<div class="main__title">
						<h2>Danh Sách Phim Lẻ</h2>
						<div class="main__title-wrap">		
						 <a asp-action="Create" class="main__title-link">Thêm Phim</a>
							<!-- search -->
							<form asp-action="Create" class="main__title-form">
								<input type="text" placeholder="Tìm Kiếm">
								<button type="button">
									<i class="icon ion-ios-search"></i>
								</button>
							</form>
							<!-- end search -->
						</div>
					</div>
				</div>
				<!-- end main title -->

			<div class="catalog">
				<div class="container">
					<div class="row">
					@if (Model != null)
					{
						@foreach (var item in Model)
						{
							<div class="col-6 col-sm-12 col-lg-6">
								<div class="card card--list">
									<div class="row">
										<div class="col-12 col-sm-4">
											<div class="card__cover">
												<img src="@("~/img/" +item.Img)" asp-append-version="true" width="160px" height="230px">
												<a href="#" class="card__play">
													<i class="icon ion-ios-play"></i>
												</a>
											</div>
										</div>
										<div class="col-12 col-sm-8" >
											<div class="card__content"  >
												<h3 class="card__title" style=" color: #ff5860;font-size: 30px;overflow: hidden;-webkit-line-clamp:1;display: -webkit-box;-webkit-box-orient: vertical;" ><a>@Html.DisplayFor(modelItem => item.TenPhim)</a></h3>												
												<div class="card__wrap" style=" color: white;">													
													<ul class="card__list">
														<li>Quốc Gia: @Html.DisplayFor(modelItem => item.MaQgNavigation.TenQg)</li>
														<li>Năm Phát Hành: @Html.DisplayFor(modelItem => item.NamPhatHanhNavigation.TenNam)	</li>
														
														
													</ul>
												</div>
												<div class="card__description" style=" color: white; overflow: hidden;-webkit-line-clamp:3;display: -webkit-box;-webkit-box-orient: vertical;">
													<p>Nội Dung: @Html.DisplayFor(modelItem => item.NoiDung)</p>
												</div>
												<div class="main__table-btns">
													
													<a asp-action="Details" asp-route-id="@item.Id" class="main__table-btn main__table-btn--view">
														<i class="icon ion-ios-eye"></i>
													</a>
													<a asp-action="Edit" asp-route-id="@item.Id" class="main__table-btn main__table-btn--edit">
														<i class="icon ion-ios-create"></i>
													</a>
													<a asp-action="Delete" asp-route-id="@item.Id" class="main__table-btn main__table-btn--delete ">
														<i class="icon ion-ios-trash"></i>
													</a>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						}
					}
				
					</div>
				</div>
			</div>				
</div>